{
	"schemaVersion": 1,
	"id": "pay-everyone",
	"version": "${version}",
	"name": "Pay Everyone",
	"description": "A client-side Fabric mod that automatically scans and pay all online players on multiplayer servers. Be like Mister Beast!",
	"authors": [
		"Aurick"
	],
	"contact": {
		"homepage": "https://modrinth.com/mod/payeveryone",
		"sources": "https://github.com/aurickk/pay-everyone/"
	},
	"icon": "assets/pay-everyone/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			"pay.everyone.mod.PayEveryone"
		],
		"client": [
			"pay.everyone.mod.PayEveryoneClient"
		]
	},
	"mixins": [
		"pay-everyone.mixins.json",
		{
			"config": "pay-everyone.client.mixins.json",
			"environment": "client"
		}
	],
	"depends": {
		"fabricloader": ">=0.15.0",
		"minecraft": "${minecraft_version_range}",
		"java": ">=21",
		"fabric-api": "*"
	}
}
